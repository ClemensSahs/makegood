<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.core.expressions.definitions">
      <definition
            id="com.piece_framework.makegood.ui.definitions.phpContentType">
         <with
               variable="activeContexts">
            <iterate
                  operator="or">
               <equals
                     value="org.eclipse.php.core.phpsource">
               </equals>
            </iterate>
         </with>
      </definition>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <category
            id="com.piece_framework.makegood.ui.views.makeGoodCategory"
            name="MakeGood">
      </category>
      <view
            category="com.piece_framework.makegood.ui.views.makeGoodCategory"
            class="com.piece_framework.makegood.ui.views.TestResultView"
            icon="icons/MakeGood.gif"
            id="com.piece_framework.makegood.ui.views.resultView"
            name="MakeGood"
            restorable="true">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="popup:org.eclipse.ui.popup.any?after=additions">
         <separator
               name="com.piece_framework.makegood.ui.runTestSeparator"
               visible="true">
         </separator>
         <command
               commandId="com.piece_framework.makegood.ui.RunTestFromExplorer"
               icon="icons/MakeGood.gif"
               label="&amp;Run tests for"
               style="push">
            <visibleWhen
                  checkEnabled="true">
               <with
                     variable="activeMenuSelection">
                  <or>
                     <and>
                        <count
                              value="1">
                        </count>
                        <iterate>
                           <adapt
                                 type="org.eclipse.core.resources.IFolder">
                           </adapt>
                        </iterate>
                     </and>
                     <and>
                        <count
                              value="1">
                        </count>
                        <iterate>
                           <adapt
                                 type="org.eclipse.core.resources.IFile">
                           </adapt>
                        </iterate>
                     </and>
                     <and>
                        <count
                              value="1">
                        </count>
                        <iterate>
                           <adapt
                                 type="org.eclipse.dltk.core.IProjectFragment">
                           </adapt>
                        </iterate>
                     </and>
                     <and>
                        <count
                              value="1">
                        </count>
                        <iterate>
                           <adapt
                                 type="org.eclipse.dltk.core.IScriptFolder">
                           </adapt>
                        </iterate>
                     </and>
                     <and>
                        <count
                              value="1">
                        </count>
                        <iterate>
                           <adapt
                                 type="org.eclipse.dltk.core.IModule">
                           </adapt>
                        </iterate>
                     </and>
                     <and>
                        <count
                              value="1">
                        </count>
                        <iterate>
                           <adapt
                                 type="org.eclipse.dltk.core.IType">
                           </adapt>
                        </iterate>
                     </and>
                     <and>
                        <count
                              value="1">
                        </count>
                        <iterate>
                           <adapt
                                 type="org.eclipse.dltk.core.IMethod">
                           </adapt>
                        </iterate>
                     </and>
                  </or>
               </with>
            </visibleWhen>
         </command>
         <menu
               icon="icons/MakeGood.gif"
               label="&amp;Run tests for">
            <visibleWhen
                  checkEnabled="false">
               <reference
                     definitionId="com.piece_framework.makegood.ui.definitions.phpContentType">
               </reference>
            </visibleWhen>
            <command
                  commandId="com.piece_framework.makegood.ui.RunTestFromEditor"
                  label="&amp;Context"
                  style="push">
            </command>
            <command
                  commandId="com.piece_framework.makegood.ui.RunTestFromEditorInClass"
                  label="C&amp;lass"
                  style="push">
            </command>
            <command
                  commandId="com.piece_framework.makegood.ui.RunTestFromEditorInFile"
                  label="&amp;File"
                  style="push">
            </command>
         </menu>
         <command
               commandId="com.piece_framework.makegood.ui.RunRelatedTestFromEditor"
               icon="icons/MakeGood.gif"
               label="Run tests that depend on this file"
               style="push">
            <visibleWhen
                  checkEnabled="false">
               <reference
                     definitionId="com.piece_framework.makegood.ui.definitions.phpContentType">
               </reference>
            </visibleWhen>
         </command>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <category
            id="com.piece_framework.makegood.ui.RunTestCategory"
            name="MakeGood">
      </category>
      <command
            categoryId="com.piece_framework.makegood.ui.RunTestCategory"
            defaultHandler="com.piece_framework.makegood.ui.handlers.RunTestFromExplorer"
            id="com.piece_framework.makegood.ui.RunTestFromExplorer"
            name="Run tests for">
      </command>
      <command
            categoryId="com.piece_framework.makegood.ui.RunTestCategory"
            defaultHandler="com.piece_framework.makegood.ui.handlers.RunTestFromEditor"
            id="com.piece_framework.makegood.ui.RunTestFromEditor"
            name="Run tests for context">
      </command>
      <command
            categoryId="com.piece_framework.makegood.ui.RunTestCategory"
            defaultHandler="com.piece_framework.makegood.ui.handlers.RunTestFromEditorInClass"
            id="com.piece_framework.makegood.ui.RunTestFromEditorInClass"
            name="Run tests for class">
      </command>
      <command
            categoryId="com.piece_framework.makegood.ui.RunTestCategory"
            defaultHandler="com.piece_framework.makegood.ui.handlers.RunTestFromEditorInFile"
            id="com.piece_framework.makegood.ui.RunTestFromEditorInFile"
            name="Run tests for file">
      </command>
      <command
            categoryId="com.piece_framework.makegood.ui.RunTestCategory"
            defaultHandler="com.piece_framework.makegood.ui.handlers.RunRelatedTestFromEditor"
            id="com.piece_framework.makegood.ui.RunRelatedTestFromEditor"
            name="Run tests that depend on this file">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            categoryId="com.piece_framework.makegood.ui.RunTestCategory"
            id="com.piece_framework.makegood.ui.commands.nextFailedTest"
            name="Next Failed Test">
      </command>
      <command
            categoryId="com.piece_framework.makegood.ui.RunTestCategory"
            id="com.piece_framework.makegood.ui.commands.previousFailedTest"
            name="Previous Failed Test">
      </command>
      <command
            categoryId="com.piece_framework.makegood.ui.RunTestCategory"
            id="com.piece_framework.makegood.ui.commands.showFailuresOnly"
            name="Show Failures Only">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.propertyPages">
      <page
            class="com.piece_framework.makegood.ui.propertyPages.MakeGoodPropertyPage"
            icon="icons/MakeGood.gif"
            id="com.piece_framework.makegood.ui.MakeGood"
            name="MakeGood">
         <enabledWhen>
            <or>
               <instanceof
                     value="org.eclipse.core.resources.IProject">
               </instanceof>
               <instanceof
                     value="org.eclipse.dltk.core.IScriptProject">
               </instanceof>
            </or>
         </enabledWhen>
      </page>
   </extension>
   <extension
         point="org.eclipse.ui.contexts">
      <context
            id="com.piece_framework.makegood.ui.contexts.resultView"
            name="In MakeGood Result View">
      </context>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="com.piece_framework.makegood.ui.RunTestFromEditor"
            contextId="org.eclipse.php.core.phpsource"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="M3+M">
      </key>
      <key
            commandId="com.piece_framework.makegood.ui.commands.nextFailedTest"
            contextId="com.piece_framework.makegood.ui.contexts.resultView"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="J">
      </key>
      <key
            commandId="com.piece_framework.makegood.ui.commands.previousFailedTest"
            contextId="com.piece_framework.makegood.ui.contexts.resultView"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="K">
      </key>
      <key
            commandId="com.piece_framework.makegood.ui.commands.showFailuresOnly"
            contextId="com.piece_framework.makegood.ui.contexts.resultView"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="M1+F">
      </key>
   </extension>
   <extension
         point="org.eclipse.ui.viewActions">
      <viewContribution
            id="com.piece_framework.makegood.ui.viewActions.resultView"
            targetID="com.piece_framework.makegood.ui.views.resultView">
         <action
               class="com.piece_framework.makegood.ui.actions.ShowFailuresOnlyAction"
               definitionId="com.piece_framework.makegood.ui.commands.showFailuresOnly"
               icon="icons/filter.gif"
               id="com.piece_framework.makegood.ui.viewActions.resultView.showFailuresOnly"
               label="Show Failures Only"
               style="toggle"
               toolbarPath="additions"
               tooltip="Show Failures Only">
         </action>
         <action
               class="com.piece_framework.makegood.ui.actions.PreviousFailedTestActions"
               definitionId="com.piece_framework.makegood.ui.commands.previousFailedTest"
               icon="icons/previous.gif"
               id="com.piece_framework.makegood.ui.viewActions.resultView.previousFailedTest"
               label="Previous Failed Test"
               style="push"
               toolbarPath="additions"
               tooltip="Previous Failed Test">
         </action>
         <action
               class="com.piece_framework.makegood.ui.actions.NextFailedTestAction"
               definitionId="com.piece_framework.makegood.ui.commands.nextFailedTest"
               icon="icons/next.gif"
               id="com.piece_framework.makegood.ui.viewActions.resultView.NextFailedTest"
               label="Next Failed Test"
               style="push"
               toolbarPath="additions"
               tooltip="Next Failed Test">
         </action>
      </viewContribution>
   </extension>
   <extension
         point="com.piece_framework.makegood.core.eventListeners">
      <eventListener
            listener="com.piece_framework.makegood.ui.views.TestResultViewSetter">
      </eventListener>
   </extension>

</plugin>
