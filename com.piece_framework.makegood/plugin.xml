<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.views">
      <category
            name="MakeGood"
            id="com.piece_framework.makegood">
      </category>
      <view
            category="com.piece_framework.makegood"
            class="com.piece_framework.makegood.views.ResultView"
            icon="icons/MakeGood.gif"
            id="com.piece_framework.makegood.views.resultView"
            name="Result View"
            restorable="true">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="org.eclipse.jdt.ui.JavaPerspective">
         <view
               ratio="0.5"
               relative="org.eclipse.ui.views.TaskList"
               relationship="right"
               id="com.piece_framework.makegood.views.SampleView">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.help.contexts">
      <contexts
            file="contexts.xml">
      </contexts>
   </extension>
   <extension
         point="org.eclipse.debug.core.launchConfigurationTypes">
      <launchConfigurationType
            delegate="com.piece_framework.makegood.StagehandTestRunnerLaunchConfigurationDelegate"
            id="com.piece_framework.makegood.launchConfigurationType"
            modes="run,debug"
            name="MakeGood"
            public="false">
         <fileExtension
               default="true"
               extension="php">
         </fileExtension>
      </launchConfigurationType>
   </extension>
   <extension
         point="org.eclipse.debug.ui.launchShortcuts">
      <shortcut
            class="com.piece_framework.makegood.StagehandTestRunnerLaunchShortcut"
            id="com.piece_framework.makegood.shortcut"
            label="MakeGood"
            modes="run, debug">
         <contextualLaunch>
            <enablement>
               <count
                     value="*">
               </count>
            </enablement>
         </contextualLaunch>
         <configurationType
               id="com.piece_framework.makegood.launchConfigurationType">
         </configurationType>
      </shortcut>
   </extension>

</plugin>
